{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "outDir": "../../dist/out-tsc",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ],
    "paths": {
      "@/app": ["apps/web/src/app"],
      "@/app/*": ["apps/web/src/app/*"],

      "@/pages": ["apps/web/src/pages"],
      "@/pages/*": ["apps/web/src/pages/*"],

      "@/widgets": ["apps/web/src/widgets"],
      "@/widgets/*": ["apps/web/src/widgets/*"],

      "@/features": ["apps/web/src/features"],
      "@/features/*": ["apps/web/src/features/*"],

      "@/entities": ["apps/web/src/entities"],
      "@/entities/*": ["apps/web/src/entities/*"],

      "@/shared": ["apps/web/src/shared"],
      "@/shared/*": ["apps/web/src/shared/*"],

      "@betterdocs/ui": ["libs/ui/src/components"],
      "@betterdocs/ui/*": ["libs/ui/src/components/*"],

      "@betterdocs/utils": ["libs/utils/src/index.ts"],
      "@betterdocs/lib": ["libs/utils"],

      "@betterdocs/hooks": ["libs/hooks/src"],
      "@betterdocs/hooks/*": ["libs/hooks/src/*"],

      "@betterdocs/plate-ui": ["libs/plate-ui/src/index.ts"],
      "@betterdocs/assistant-ui": ["libs/assistant-ui/src/index.ts"]
    }
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx",
    "vite.config.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.config.mts"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx", "../../libs/plate-ui/src/transforms.ts"]
}
