{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true,
    "deleteOutDir": true,
    "assets": [
      {
        "include": "src/assets/**/*",
        "outDir": "dist/assets"
      },
      {
        "include": "src/modules/mail/templates/**/*",
        "outDir": "dist/modules/mail/templates"
      }
    ]
  }
}
