{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/api",
        "command": "npx nest build -b swc"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/api",
        "command": "npx nest start -b swc -w --type-check"
      }
    },

    "seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node --project apps/api/tsconfig.app.json apps/api/src/shared/database/seeders/run-seeders.ts"
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/api/Dockerfile . -t api"
    }
  }
}
